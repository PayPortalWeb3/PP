{
  "name": "@payportal/portal",
  "version": "1.4.1",
  "description": "Self-hosted payment portal with 402/403 protocol support for blockchain payments. Supports EVM chains, Solana, QR codes, webhooks, subscriptions, multi-currency, and $PP token.",
  "author": "PayPortal Team",
  "homepage": "https://ppweb3.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PayPortalWeb3/PP.git"
  },
  "bugs": {
    "url": "https://github.com/PayPortalWeb3/PP/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://ppweb3.vercel.app"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "portal": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "demo": "npm run build && node demo/demo-server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "paywall",
    "402",
    "payment-required",
    "blockchain",
    "crypto",
    "paid-links",
    "ethereum",
    "solana",
    "web3",
    "self-hosted",
    "qrcode",
    "webhooks",
    "payment-gateway",
    "subscriptions",
    "recurring-payments",
    "multi-currency",
    "payportal",
    "pay-portal",
    "$PP"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
